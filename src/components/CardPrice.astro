---
    const { desc, price } = Astro.props
---

<div class=" flex gap-2 py-1 justify-between px-2 rounded-xl rounded-bl-sm  items-center w-40 bg-gradient-to-r from-LightMagenta to-LightViolet">
    <div class="flex gap-2 items-center">
        <div class="w-3 h-3 ring-1 ring-LightGrayishViolet rounded-full"></div>
        <span class="text-[10px] text-white ">{desc}</span>
    </div>
    <p class="font-bold text-white">${price}</p>
</div>