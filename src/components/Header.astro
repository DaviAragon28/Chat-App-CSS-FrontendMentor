---
import Notch from "./Notch.astro";
import { Icon } from "astro-icon";
---

<header class="relative rounded-b-md bg-gradient-to-l from-LightMagenta to-LightViolet h-16">
    <Notch />
    <div class="pt-6 px-1 flex items-center justify-between">
        <div class="flex items-center gap-1">
            <Icon pack="mdi" name="arrow-left" class="w-4 h-4 text-white" />
            <img
                class="w-7 h-7 rounded-full ring-2 ring-white object-cover"
                src="/images/avatar.jpg"
                alt=""
            />
            <div class="flex flex-col">
                <p class="font-bold text-white text-[12px]">Samuel Green</p>
                <span class="text-[10px] text-paleViolet">Available to Walk</span>
            </div>
        </div>
        <Icon pack="mdi" name="dots-vertical" class="w-4 h-4 text-white" />
    </div>
</header>
