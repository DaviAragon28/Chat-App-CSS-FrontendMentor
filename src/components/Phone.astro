---
import CardPrice from "./CardPrice.astro";
import Header from "./Header.astro";
import Input from "./Input.astro";
import Message from "./Message.astro";
import Photos from "./Photos.astro";
---

<section
    class="border-[10px]  border-white bg-LightGrayishViolet rounded-3xl w-60 mx-auto  overflow-hidden lg:mx-0 lg:w-64"
>
    <Header />
    <div class="flex flex-col gap-2 pt-4 pb-2 px-2" >
        <Message message="That sounds great. I’d be happy with that." />
        <Message message="Could you send over some pictures of your dog, please?" />
        <Photos />
        <Message right message="Here are a few pictures. She’s a happy girl!" />
        <Message right message="Can you make it?" />
        <Message message="She looks so happy! The time we discussed works. How long shall I take her out for?" />
        <CardPrice
            desc="30 minute walk"
            price="29"
        />
        <CardPrice
            desc="1 hour walk"
            price="49"
        />
        <Input />
    </div>
</section>
